{
    "name": "graywings/types",
    "type": "library",
    "license": "MIT",
    "scripts": {
        "test": "phpunit tests/units --coverage-html coverage-doc",
        "lint": "phplint",
        "analyze": [
            "phan",
            "phpstan analyze -c .phpstan/phpstan.neon",
            "psalm"
        ],
        "doc": "php tools/phpDocumentor -d src/ -t docs/",
        "post-install-cmd": "phan --init --init-overwrite --init-level=1"
    },
    "autoload": {
        "psr-4": {
            "Graywings\\Types\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Graywings\\Types\\Units\\": "tests/units"
        }
    },
    "authors": [
        {
            "name": "tterashima",
            "email": "taira.terashima@gmail.com"
        }
    ],
    "require": {
        "graywings/exceptions": "^1.0.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "phan/phan": "^5.4",
        "vimeo/psalm": "^4.27",
        "phpstan/phpstan": "^1.8",
        "overtrue/phplint": "^5.3"
    }
}
